
{
    "layer": "top", // Waybar at top layer
    "position": "top", // Waybar position (top|bottom|left|right)
    // "width": 1280, // Waybar width
    // Choose the order of the modules
    "modules-left": ["workspaces"],
    "modules-center": ["custom/music"],
    "modules-right": ["pulseaudio", "battery", "clock", "custom/power"],
    
    "workspaces": {
         "disable-scroll": true,
         "sort-by-name": true,
         "format": " {icon} ",
         "format-icons": {
             "default": "ÓÆ¥"
         }
     },

    "tray": {
        "icon-size": 21,
        "spacing": 10
    },

    "custom/music": {
        "format": "ÔÄÅ  {}",
        "escape": true,
        "interval": 3,
        "tooltip": true,
        "exec": "playerctl metadata --format='{{ title }}'",
        "on-click": "playerctl play-pause",
        "max-length": 50
    },

    "clock": {
        "timezone": "Asia/Tokyo",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "format-alt": " üìÖ  {:%d/%m/%Y}",
        "format": "{:%H:%M}"
    },

    "wifi": {
        "format": ""
    },

    "bluetooth": {
        "format": ""
    },

    "battery": {
        "states": {
            "warning": 30,
            "critical": 15
        },
        "format": "{icon}",
        "format-charging": "üîã",
        "format-plugged": "üîå",
        "format-alt": "{icon}",
        "format-icons": "ÔñÇ"
    },

    "pulseaudio": {
        // "scroll-step": 1, // %, can be a float
        "format": "{icon}  {volume}%",
        "format-muted": "Ôë¶",
        "format-icons": {
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ® "]
        },
        "on-click": "pavucontrol"
    },

    "custom/lock": {
        "tooltip": false,
        "on-click": "sh -c '(sleep 0.5s; swaylock --grace 0)' & disown",
        "format": "ÔÄ£"
    },

    "custom/power": {
        "tooltip": false,
        "on-click": "wlogout &",
	      "format": "‚èª",
    }
    
}
